{
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "allowJs": false,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "skipLibCheck": true,
      "sourceMap": false,
      "inlineSourceMap": true,
  
      /* Bundler mode */
      "moduleResolution": "bundler", 
      "allowImportingTsExtensions": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true, // ✅ Предотвращает ошибки при разных регистрах
    
      "isolatedModules": true,
      "moduleDetection": "force",
      "noEmit": true,
      "jsx": "react-jsx", // Используйте новый JSX Runtime
      "jsxImportSource": "react",
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "noUncheckedIndexedAccess": true, // ✅ Добавляет защиту при работе с массивами/объектами
      "noUncheckedSideEffectImports": true,

      "declaration": true,
      "declarationDir": "dist/types",
      "emitDeclarationOnly": true,
      "outDir": "dist",
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  